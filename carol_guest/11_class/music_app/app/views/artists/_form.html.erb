
<div class="col-md-6">

<div class ="well">

<%= simple_form_for(@artist, html: {:class => 'form-horizontal'}) do |f| %>

<%= f.input :name, label:false, input_html: {:class => 'form-control'}, placeholder: 'Artist Name' %>
<br/>
<%= f.input :pic_url, label:false, input_html: {:class => 'form-control'}, placeholder: 'Artist Picture - URL' %>

<br/>

<%= f.submit "Submit".html_safe, :class => 'btn btn-lg btn-primary' %>

<%= link_to "Cancel", artists_path %>

<%end %>

</div>
</div>