<div class="col-md-6">

<div class ="well">

<%= simple_form_for(@record_label, html: {:class => 'form-horizontal'}) do |f| %>

<%= f.input :name, label:false, input_html: {:class => 'form-control'}, placeholder: 'Record Label' %>
<br/>

<br/>

<%= f.input :pic_url, label:false, input_html: {:class => 'form-control'}, placeholder: 'Picture URL' %>

<br/>


<%= f.submit "Submit".html_safe, :class => 'btn btn-lg btn-primary' %>

<%= link_to "Cancel", record_labels_path %>



<%end %>

</div>
</div>