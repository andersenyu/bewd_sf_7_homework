<div class="col-md-6">

<div class ="well">

<%= simple_form_for(@track, html: {:class => 'form-horizontal'}) do |f| %>

<%= f.input :name, label:false, input_html: {:class => 'form-control'}, placeholder: 'Track name' %>
<br/>

<%= f.association :artist, label:false, input_html: {:class => 'form-control'}, placeholder:'Select Artist'%>

<br/>

<%= f.input :rating, label:false, input_html: {:class => 'form-control'}, :collection => 1..5, placeholder:'Rating' %>

<br/>

<%= f.input :location, label:false, input_html: {:class => 'form-control'}, placeholder: 'File Location' %>



<br/>


<%= f.submit "Submit".html_safe, :class => 'btn btn-lg btn-primary' %>

<%= link_to "Cancel", tracks_path %>



<%end %>

</div>
</div>