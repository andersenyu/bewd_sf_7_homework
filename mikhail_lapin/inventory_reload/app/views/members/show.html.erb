<h1>Summary for <%= @current_member.email %></h1>


<div class="col-md-12">

<div class="col-md-8 col-md-offset-2">

<h1 style="color:#666666;">Items checked out by me</h1>

<div class="tablre-responsive">

<table class="table table-striped table-hover">

<tr class="small">
<th> Name </th>
<th> Description </th>
<th> Edit </th>
<th> Delete</th>
<th> Return</th>

</tr>


<% @member.items.each do |item| %>

	<td> <%=link_to item.name, item_path(item) %> </td>
	<td> <%= item.description unless item.description.nil?%> </td>
	<td><%= link_to "Edit", edit_item_path(item), :class => 'btn-xs btn-default'%></td>
	<td><%= link_to 'Delete', item, method: :delete, data: {confirm: 'Are you sure?'}, :class => 'btn btn-xs btn-danger' %></td>
	<td><%= link_to 'Return', return_path(item.id) , data: {confirm: 'Are you sure?'}, :class => 'btn btn-xs btn-primary' %></td>
	
	</td>

</tr>

<% end %>
</table>

<div class="well">
<td><%= link_to "Check New Item In", new_item_path, :class => 'btn btn-xs btn-default'%></td>
</td> 


</div>
</div>
</div>