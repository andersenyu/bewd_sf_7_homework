<h1>Main Page</h1>




<div class="col-md-12">

<div class="col-md-8 col-md-offset-2">

<h1 style="color:#666666;">All items list</h1>

<div class="tablre-responsive">

<table class="table table-striped table-hover">

<tr class="small">
<th> Name </th>
<th> Description </th>
<th> Image </th>
<th> Checked Out? </th>
<th> User Checked Out </th>
<th> Edit </th>
<th> Delete</th>
<th> Check Out</th>


</tr>
	


<% @items.each do |item| %>

<tr class="small">
	<td> <%=link_to item.name, item_path(item) %> </td>
	<td> <%= item.description unless item.description.nil?%> </td>
	<td> <%= image_tag attachment_url(item, :item_image), height: '64', width: '64' %> </td>
	<td> <%= item.checked_out  %> </td>
	<td> <%= item.member_id %> </td>
	<td><%= link_to "Edit", edit_item_path(item), :class => 'btn-xs btn-default'%></td>
	<td><%= link_to 'Delete', item, method: :delete, data: {confirm: 'Are you sure?'}, :class => 'btn btn-xs btn-danger' %></td>
	<td><%= link_to 'Check Out', checkout_path(item.id) , data: {confirm: 'Are you sure?'}, :class => 'btn btn-xs btn-danger' %></td>
	
	</td>


</tr>

<% end %>
</table>


</div>
</div>