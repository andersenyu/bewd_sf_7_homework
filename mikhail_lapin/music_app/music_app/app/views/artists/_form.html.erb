<div class="col-md-6">




<div class="well">
<%= simple_form_for(@artist, html: {:class => 'form-horizontal'}) do |f| %>

<%= f.input :name, label: false, input_html: {:class => 'form-control', placeholder: 'Artist Name'} %>

<%= f.input :pic_url, label: false,  input_html: {:class => 'form-control', placeholder: 'Artist Picture'} %>

<%= f.association :genre, label: false, input_html: {:class => 'form-control'} %>

<br/>

<div style=text-align:"center">
<%= f.submit "Submit".html_safe, :class => 'btn btn-lg btn-default' %>

<%end %>


</div>