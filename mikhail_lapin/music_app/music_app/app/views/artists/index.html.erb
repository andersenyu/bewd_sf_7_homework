<div class="col-md-12">

<div class="col-md-8 col-md-offset-2">

<h1 style="color:#666666;">Artists Index Page</h1>

<div class="tablre-responsive">

<table class="table table-striped table-hover">

<tr class="small">
<th> Name </th>
<th> Pic </th>
<th> Genre </th>
<th> Actions </th>

</tr>

<% @artists.each do |artist| %>

<tr class="small">
	<td> <%= artist.name %> </td>
	<td> <%= image_tag(artist.pic_url, size:'200x200') unless artist.pic_url.nil?%> </td>
	<td> <%= artist.genre.name if artist.genre.present? %> </td>
	<td> <%= link_to "Show", artist_path(artist), :class => 'btn btn-xs btn-warning' %>

	<%= link_to "Edit", edit_artist_path(artist), :class => 'btn-xs btn-default'%>

	<%= link_to 'Delete', artist, method: :delete, data: {confirm: 'Are you sure?'}, :class => 'btn btn-xs btn-danger' %>
	
	</td>


</tr>
<% end %>
</table>

</div>
</div>