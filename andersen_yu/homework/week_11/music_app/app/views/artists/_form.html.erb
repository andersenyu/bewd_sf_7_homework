
<div class="col-md-6 col-md-offset-3">

 	<%= simple_form_for(@artist, html: {:class => 'form-horizontal'}) do |f| %>
		 <div class="well">
		 	<%= f.input :name, input_html: {:class => 'form-control', placeholder: 'Artist Name'} %>
		 <br>
		 	<%= f.input :pic_url, label: false,input_html: {:class => 'form-control', placeholder: 'Picture of Artist'} %>
		 <br>
		 <div class="dropdown" >
		 	<%= f.association :record_label, label: false, input_html: {:class => 'form-control'}, :include_blank => "Record Label" %>
		</div>
		<br>
		<div style="text-align:center;">
		 	<%= f.submit "Submit".html_safe, :class => 'btn btn-lrg btn-danger' %>
		 </div>
 	<% end %>
 </div>
 </div>
