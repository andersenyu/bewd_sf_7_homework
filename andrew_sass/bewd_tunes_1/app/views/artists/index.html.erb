<div class='col-md-12'>
<div class="col-md-8 col-md-offset-2">
<h1 style="color:#666666;">Artists Index Page</h1>

<div class="table-responsive">

<table class="table table-striped table-hover">

	<tr class="small">
		<th> Name </th>
		<th> Pic </th>
		<th> Actions </th>
	</tr>

<% @artists.each do |artist| %>

	<tr class="small">
		<td> <%= artist.name %> </td>
		<td> <%= image_tag(artist.profile_image, size: '200x200', :class => 'img-circle') unless artist.profile_image.nil? %> </td>
		<td>
			<%= link_to "#{artist.name}", artist_path(artist), :class => 'btn btn-xs btn-danger'  %> 
			<%= link_to "Edit #{artist.name}", edit_artist_path(artist), :class => 'btn btn-xs btn-success' %>
			<%= link_to 'Delete', artist, method: :delete, data: {confirm: 'Are you sure?'}, :class => 'btn btn-xs btn-warning' %>
			
		</td>	
	</tr>
<% end %>
<%= link_to "Create New Artist", new_artist_path, :class => 'btn btn-xs btn-success' %>
</table>

</div>
</div>

</div>
