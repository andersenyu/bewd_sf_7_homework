<div class="col-md-6">
	<h1 style="color:#cc3333;">Create New Artist</h1>

	<div class="well">
	<%= simple_form_for(@artist, html: {:class => 'form-horizontal'} ) do |f| %>

	<p><%= f.input :name, label: false, input_html: {:class => 'form-control', placeholder: 'Artist Name'} %></p>

	<p><%= f.input :profile_image, label: false, input_html: {:class => 'form-control', placeholder: 'Artist Picture'} %></p>

	<p><%= f.association :record_label, input_html: {:class => 'form-control'} %> </p>

	<div style="text-align:center;">
	<p><%= f.submit "Submit".html_safe, :class => 'btn btn-lg btn-danger' %></p>
	</div>

	<% end %>
</div>
</div>