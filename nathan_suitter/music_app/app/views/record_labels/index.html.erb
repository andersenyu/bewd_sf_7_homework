<div class="col-md-8 col-md-offset-2">
  <h1 style="color:#666;text-align:center;">Record Labels</h1>
  <div class="table-responive">
    <div style="text-align:center;margin-bottom:10px">
      <%= link_to "New Label", new_record_label_path, :class => 'btn btn-md btn-success' %>
    </div>

    <table class="table table-striped">

    <tr class="small">
      <th>Name</th>
      <th colspan="3">Actions</th>
    </tr>

    <% @record_labels.each do |record_label| %>
      <tr class="small">
        <td><%= record_label.name %></td>
        <td><%= link_to "Show", record_label_path(record_label), :class => 'btn btn-xs warning' %></td>
        <td><%= link_to "Edit", edit_record_label_path(record_label), :clase => 'btn btn-xs default' %></td>
        <td><%= link_to "Delete", record_label, method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-xs warning' %></td>
      </tr>
    <% end %>
    </table>

    <div style="text-align:center;margin-bottom:10px">
      <%= link_to "New Label", new_record_label_path, :class => 'btn btn-md btn-success' %>
    </div>

  </div>
</div>
