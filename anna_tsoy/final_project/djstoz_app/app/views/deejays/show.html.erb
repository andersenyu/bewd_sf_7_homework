<dif class = "container">
  <div class = "col-md-12">
  <% if @deejay == current_deejay %>
    <h3>Hello <%= current_deejay.name %>!</h3>
  <% end %>
  <div class = "row">
          <div class="caption">
            <%= @deejay.name %>
          </div>

          <div class="caption">
            <%= @deejay.description %>
          </div>

          <div class="caption">
            <%= @deejay.email%>
          </div>

          <div class="caption">
            <%= @deejay.soundcloud %>
          </div>

<div class = "col-md-12">
 <% @deejay_events.each do |event| %>
  <tr>
  <td><%= event.name %></td>
  </tr>
 <% end %>
</div>
          <% if @deejay == current_deejay %>
            <%= link_to "Edit Your Profile", edit_deejay_path %>
            <%= link_to "Add Your Events",new_event_path %>
            <%= link_to "Delete Self", deejay_path(@deejay), method: :delete, data: {confirm: 'Are you sure you want to destroy your profile?'},:class => 'btn btn-xs btn-danger' %>
          <% else %>
           <p>Request form</p>
          <% end %>
        </div>
  </div>
</dif>

