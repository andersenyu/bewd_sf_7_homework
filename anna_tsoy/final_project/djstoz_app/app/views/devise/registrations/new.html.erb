<div class="col-lg-6 col-lg-offset-3">
<h2>Sign up</h2>
<hr/>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>


    <%= f.input :email, required: true, label: false, autofocus: true, input_html: {:class => 'form-control', placeholder: 'Email'} %>
    <%= f.input :photo_url, required: false, label: false, autofocus: true, input_html: {:class => 'form-control', placeholder: 'Avatar'} %>
    <%= f.input :password, label: false, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable), input_html: {:class => 'form-control', placeholder: 'Select Password'} %>
    <%= f.input :password_confirmation, label: false, required: true, input_html: {:class => 'form-control', placeholder: 'Confirm Password'} %>
    <%= f.input :name, label: false, input_html: {:class => 'form-control', placeholder: 'Name'}  %>
    <%= f.input :description, label: false, required: true , input_html: {:class => 'form-control', placeholder: 'Description'}%>
    <%= f.input :soundcloud, label: false, required: false, required: true , input_html: {:class => 'form-control', placeholder: 'SoundCloud Url'} %>

<hr/>

    <%= f.button :submit, "Sign up", :class => 'btn btn-lg btn-default' %>

<% end %>

<!-- <%= render "devise/shared/links" %> -->
</div>
