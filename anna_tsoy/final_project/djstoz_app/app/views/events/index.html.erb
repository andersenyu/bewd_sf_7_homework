<div class = "container">
  <div class = "col-md-12">
    <% @events.each do |event| %>
      <div class = "row">
        <h3><%= event.name %></h3>
        <%= event.description %>
        <%= event.location %>
        <%= event.date %>
      </div>
    <% end %>


    <% if deejay_signed_in? %>
    <p><a href = "<%= new_event_path %>" class = "btn btn-primary" role="button">Add Your Events</a></p>
    <% end %>
  </div>
</div>
